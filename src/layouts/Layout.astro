---
import '../styles/global.css';
import 'katex/dist/katex.min.css';
import SearchBar from '../components/SearchBar';
import ThemeSettings from '../components/ThemeSettings';
import ModelPickerTrigger from '@/components/ModelPickerTrigger';
import MobileMenu from '../components/MobileMenu';
import { Button } from '@/components/ui/button';
import { Github, Home } from 'lucide-react';

interface Props {
	title: string;
    isHome?: boolean;
}

const { title, isHome } = Astro.props;

const { pathname } = Astro.url;

const isSettingsPage = pathname === '/settings';

// Enhanced mask for home page to fade out grid around the text (center hole)
// while keeping the original top-down fade for other pages
const maskImage = isHome
    ? 'radial-gradient(ellipse 80% 50% at 50% 25%, transparent 0%, transparent 10%, #000 40%, #000 60%, transparent 100%)'
    : 'radial-gradient(ellipse 60% 50% at 50% 0%, #000 70%, transparent 100%)';
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="arXiv, but prettier according to some guy" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Alice&family=Courier+Prime:ital,wght@0,400;0,700;1,400&family=JetBrains+Mono:wght@400&family=Outfit:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Rajdhani:wght@300;400;500;600;700&family=Syne:wght@400;500;600;700;800&family=Titillium+Web:wght@300;400;600;700&display=swap" rel="stylesheet">
		<script is:inline>
			// Immediate theme application to prevent FOUC
			const theme = localStorage.getItem('theme') || 'research';
			const font = localStorage.getItem('font') || 'research';

			document.documentElement.setAttribute('data-theme', theme);
			document.documentElement.setAttribute('data-font', font);

			// Toggle 'dark' class based on theme for Tailwind dark mode utilities
			if (theme === 'swiss') {
				document.documentElement.classList.remove('dark');
			} else {
				document.documentElement.classList.add('dark');
			}
		</script>
	</head>
	<body class="bg-background text-foreground min-h-screen font-sans antialiased flex flex-col overflow-x-hidden selection:bg-primary/20 selection:text-primary transition-colors duration-300">
		<div
            class="absolute inset-x-0 top-0 -z-10 h-screen w-full bg-background bg-[linear-gradient(to_right,hsl(var(--border)/0.3)_1px,transparent_1px),linear-gradient(to_bottom,hsl(var(--border)/0.3)_1px,transparent_1px)] bg-[size:24px_24px] bg-top transition-colors duration-300"
            style={{ maskImage, WebkitMaskImage: maskImage }}
        ></div>
        <header class="border-b border-border sticky top-0 bg-background/80 backdrop-blur-md z-[100]">
            <div class="container mx-auto px-4 h-16 flex items-center justify-between gap-8">
                <a href="/" class="group flex items-center gap-2 transition-opacity hover:opacity-80">
                    <span class="text-2xl font-display font-bold tracking-tight text-foreground group-hover:text-primary transition-colors">marXiv</span>
                </a>

                <div class="hidden md:flex items-center gap-8">
                    <a href="/categories" class="text-sm font-medium text-muted-foreground hover:text-primary transition-colors">Categories</a>
                </div>

                <div class="flex items-center gap-4 flex-1 justify-end">
                    <div
                        id="header-search-container"
                        class={`w-full max-w-sm hidden sm:block transition-opacity duration-300 ease-in-out ${isHome ? 'opacity-0 pointer-events-none' : 'opacity-100 pointer-events-auto'}`}
                    >
                        <SearchBar client:load className="w-full" />
                    </div>
                    {isSettingsPage ? (
                        <Button variant="ghost" size="icon" asChild className="text-muted-foreground hover:text-primary transition-colors">
                            <a href="/" aria-label="Go to Home">
                                <Home className="h-5 w-5" />
                            </a>
                        </Button>
                    ) : (
                        <>
                            <ModelPickerTrigger client:load />
                            <ThemeSettings client:load />
                        </>
                    )}
                    <Button variant="ghost" size="icon" asChild className="hidden sm:inline-flex text-muted-foreground hover:text-primary">
                        <a href="https://github.com/jaypatel1227/marXiv" target="_blank" rel="noopener noreferrer">
                            <Github className="h-5 w-5" />
                            <span class="sr-only">GitHub</span>
                        </a>
                    </Button>
                    <MobileMenu client:load />
                </div>
            </div>
        </header>
		<main class="flex-1 relative">
            <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/5 via-background to-background pointer-events-none -z-10"></div>
		    <slot />
        </main>
        <footer class="border-t border-border py-6 bg-background/50 backdrop-blur-sm">
            <div class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between text-sm text-muted-foreground gap-4">
                <div class="flex gap-4">
                    <span>&copy; {new Date().getFullYear()} marXiv</span>
                </div>
                <div class="flex gap-4">
                    <p>Powered by Astro + React</p>
                    <p>Data from <a href="https://arxiv.org" target="_blank" rel="noreferrer" class="hover:text-primary transition-colors underline">arXiv API</a></p>
                </div>
            </div>
        </footer>

        <script>
            import { initSearchToggle } from '../scripts/search-toggle';
            initSearchToggle();
        </script>
	</body>
</html>
